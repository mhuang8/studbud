/*--------------Base Styles--------------*/
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
html {
  scroll-behavior: smooth;
  font-size: 100%;
  height: 100%;
  background-color: #eef2f9;
}

body {
  width: 100%;
  height: 100%;
  max-width: 100%;
  margin: 0 auto;
  font-family: "Lato", sans-serif;
  color: #242424;
}

section {
  width: 100%;
  height: 100%;
}

#studbud {
  padding: 5rem 4.5rem;
}
#tasklist,
#kanbanboard,
#stopwatch,
#flowtime,
#resourcelist {
  padding: 3rem 1.8rem;
}

main button {
  color: white;
  /*background-color: #6182eb;*/
  background-image: linear-gradient(120deg, #7371f1 0%, #6e87f7 100%);
  border: none;
  padding: 0.9rem;
  font-family: "Nunito", sans-serif;
  font-weight: 600;
  border-radius: 30px;
  cursor: pointer;
}

main button:hover {
  background-image: linear-gradient(120deg, #6865eb 0%, #637dee 100%);
  transition: background-color 0.2s;
}

ul {
  list-style: none;
}


/*------Base Input Styles--------*/
input,
select {
  padding: 15px;
  height: 50px;
  margin: 5px;
  border: 2px solid #a3bef7;
  font-size: 0.9rem;
  border-radius: 10px;
  box-shadow: 1px 2px 5px 0px rgba(179, 181, 192, 0.1);
}

textarea {
  font-family: "Lato", sans-serif;
  padding: 15px;
  height: 80px;
  margin: 5px;
  border: 2px solid #9cc2f4;
  font-size: 0.9rem;
  border-radius: 10px;
  box-shadow: 1px 2px 5px 0px rgba(179, 181, 192, 0.1);
}

input:focus,
select:focus,
textarea:focus {
  outline: none;
  border-radius: 10px;
  border: 2px solid rgb(77, 109, 214);
}

select:invalid {
  color: rgb(117, 117, 117);
}

/*--------------Typography--------------*/
h1 {
  font-weight: 800;
  font-size: 3rem;
  padding: 0.3rem 0;
}

h2 {
  font-weight: 800;
  font-size: 1.9rem;
  margin-top: 0.5rem;
  color: #6182eb;
  background: -webkit-linear-gradient(45deg, #536ee7, #6baafd);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  /*color: linear-gradient(120deg, #6182eb 0%, #55a0f5 100%);*/
}

h3 {
  font-weight: 800;
  font-size: 1.5rem;
  padding: 0.9rem 0;
}

h4 {
  font-weight: 600;
  font-size: 1.2rem;
  padding: 0.6rem 0;
}

h5{
  font-size: 1rem;
  font-weight: 600;
  padding: 0.5rem 0;
  padding-bottom: 0.8rem;
  color: #49494b;
}

p {
  font-size: 1rem;
  padding: 0.3rem 0;
  color: #383839;
}

nav i {
  font-size: 1rem;
  padding: 0 0.3rem;
}

.fa-columns {
  font-size: 0.9rem;
}

.fa-toolbox {
  font-size: 0.9rem;
  transform: translate(0, -5%);
}

#studbud .fa-toolbox {
  font-size: 2.9rem;
}

/*----------------LAYOUT--------------*/
.page-container:not(#studbud) {
  display: none;
}

.sub-page-container:not(#read) {
  display: none;
}

/*---------------Navigation---------------*/
nav#horizontal-nav {
  width: 100%;
  height: 2.2rem;
  /*background-color: #6182eb;*/
  background-image: linear-gradient(120deg, #6182eb 0%, #559ff3 100%);
  box-shadow: 0px 3px 10px 0px rgba(9, 9, 14, 0.15);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
}
.horizontal-nav-links {
  display: flex;
  justify-content: space-between;
}
.horizontal-nav-links li {
  padding: 0.45rem 1.6rem;
}

.horizontal-nav-links a {
  color: #ffffff;
  text-decoration: none;
  font-size: 0.9rem;
  font-weight: 700;
}

.horizontal-nav-links a:hover {
  color: rgb(227, 234, 245);
}

nav#vertical-nav {
  width: 0;
  height: 100%;
  background-color: #383839;
  display: flex;
  flex-direction: row;
  position: fixed;
  left: 0;
  top: 0;
  overflow-x: hidden;
  padding-top: 5rem;
  transition: 0.5s;
}

ul.nav-links {
  display: flex;
  flex-direction: column;
}

.nav-links li {
  padding: 1rem 1.6rem;
}

.nav-links a {
  color: #ffffff;
  text-decoration: none;
  font-size: 0.9rem;
  transition: 0.3s;
}
.nav-links a:hover {
  color: rgb(190, 202, 221);
}

.nav-links a.active {
  font-weight: bold;
  color: #6c9ff4;
}

#main {
  transition: margin-left 0.5s;
}
/*-----------------Home Page-----------------*/
section#home {
