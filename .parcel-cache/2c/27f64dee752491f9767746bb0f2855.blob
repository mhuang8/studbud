/*----------------Music Player------------------*/
nav button {
  background-color: Transparent;
  border: none;
  outline: none;
  overflow: hidden;
  cursor: pointer;
}

nav .fa {
  font-size: 1.1rem;
  color: #ffffff;
}

nav .fa:hover {
  color: rgb(227, 234, 245);
}

/*applies to both music player and resource list */
.modal-box {
  display: none;
  position: fixed;
  z-index: 1; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgba(0, 0, 0, 0.3);
}

.modal-content {
  background-color: #ffffff;
  box-shadow: 0px 3px 15px 0px rgba(87, 87, 87, 0.1);
  margin: 2.7rem 1rem;
  float: right;
  padding: 1.7rem;
  border-radius: 1.25rem;
}

.music-container {
  display: flex;
  position: relative;
}

.img-container {
  position: relative;
}

.img-container::after {
  content: "";
  background-color: #ffffff;
  width: 1.5rem;
  height: 1.5rem;
  position: absolute;
  left: 50%;
  bottom: 50%;
  border-radius: 50%;
  transform: translate(-50%, 40%);
}
.img-container img {
  width: 8.5rem;
  height: 8.5rem;
  border-radius: 50%;
  object-fit: cover;

  animation: rotate 5s linear infinite;
  animation-play-state: paused;
}

.music-container.play .img-container img {
  animation-play-state: running;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.music-container-right {
  padding: 0 1.5rem;
  width: 25rem;
}

#songTitle {
  padding: 0;
}

#songArtist {
  color: rgb(121, 123, 128);
  font-size: 0.9rem;
}

.progress-container {
  background: #e0e0e0;
  border-radius: 0.3rem;
  cursor: pointer;
  margin: 0.6rem 0;
  height: 0.4rem;
  width: 100%;
}

.progress-bar {
  background-color: rgb(107, 133, 211);
  border-radius: 0.3rem;
  height: 100%;
  width: 0%;
  transition: width 0.1s linear;
}

.music-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.action-btn {
  background-color: transparent;
  background-image: none;
  color: rgb(188, 197, 221);
  font-size: 1.5rem;
  cursor: pointer;
  margin: 0 0.9rem;
  padding: 0.7rem 0.9rem;
}

.action-btn:hover {
  background-color: transparent;
  background-image: none;
  color: rgb(107, 133, 211);
  transition: color 0.2s;
}

.action-btn-big {
  color: rgb(150, 166, 211);
  font-size: 2rem;
}

/*---------------------Resource List-----------------------*/
#resource-page-container {
  display: flex;
}

.resource-nav li {
  padding: 1rem 0rem;
}

.resource-nav .nav-links {
  position: relative;
}

.resource-nav {
  width: 10rem;
}

.resource-nav a {
  color: #717171;
  font-weight: 900;
  font-size: 1rem;
  text-transform: uppercase;
}

.resource-nav a:hover {
  color: #49494b;
}

#resource-page-container a.active {
  color: #da6ea4;
  font-weight: 900;
}

.resource-nav a:after {
  content: "";
  display: block;
  height: 2px;
  left: 0%;
  position: absolute;
  background: #49494b;
  transition: width 0.3s ease 0s, left 0.3s ease 0s;
  width: 0;
}
.resource-nav a:hover:after {
  width: 70%;
  left: 0;
}

#resource-page-container a.active:after {
  background: #da6ea4;
}

.resource-modal-content {
  background-color: #ffffff;
  box-shadow: 0px 3px 15px 0px rgba(87, 87, 87, 0.1);
  margin: 12% auto;

  padding: 1.7rem;
  border-radius: 1rem;
  width: 50%;
}
.sub-page-container {
