}

/*---------------------Responsive CSS-----------------------*/
@media screen and (max-width: 700px) {
  html {
    width: 100%;
  }

  body {
    display: block;
    min-height: 200px;
    padding: 0px;
    width: 100%;
  }
  section {
    display: block;
    text-align: center;
  }
  /*nav*/

  /*home*/
  #studbud {
    padding: 4.5rem 3rem;
  }

  #icon-container {
    flex-direction: column;
  }
  .icon-col {
    width: 100%;
    margin: 0 auto;
    padding-top: 3rem;
  }
  .icon-box {
    margin: 0 auto;
  }
  #introduction-text {
    width: 100%;
  }

  /*task list*/
  #taskform {
    flex-direction: column;
  }

  div#taskform-box {
    padding: 1.8rem;
  }

  .taskCell {
    padding: 0.625rem;
  }

  .newTaskItem td {
    padding: 0.625rem;
  }

  #minsHeading,
  #priorityHeading,
  #spacingHeading {
    display: none;
  }

  .newTaskItem td:nth-child(4),
  .newTaskItem td:nth-child(5),
  .newTaskItem td:nth-child(6),
  .newTaskItem button {
    display: none;
  }

  .newTaskItem td:nth-child(3) {
    border-bottom-right-radius: 10px;
    border-top-right-radius: 10px;
  }

  .taskCheckboxInput {
    padding: 0.5rem;
    margin-right: 0.4rem;
    border-radius: 0.4rem;
  }

  /*kanban*/
  #board-container {
    flex-direction: column;
  }
  .boardColumn {
    margin: 1rem 0;
  }
  #boardNameInput {
    width: 70%;
  }

  #kanbanCard {
    text-align: left;
  }

  /*stopwatch*/
  #stopwatch-box {
    padding: 1.8rem;
  }

  #counter {
    font-size: 3.2rem;
    margin: 3rem 0;
  }

  .stopwatchButtonsContainer {
    flex-direction: column;
    align-items: center;
  }

  .stopwatchButtonsContainer button {
    margin: 1rem auto;
  }

  /*flow time*/
  .flowTimeTable th,
  .flowTimeTable td {
    font-size: 13px;
    padding: 0.6rem;
  }
  .flowTimeHeading th:last-child {
    display: none;
  }

  .flowTimeFiller th:last-child {
    display: none;
  }

  #flowTimeForm {
    margin: 1rem 0;
  }

  #flowTimeForm #studyTypeInput {
    width: 70%;
  }

  /*resource list*/
  ul.nav-links {
    align-items: flex-start;
  }

  .resource-nav {
    width: 5rem;
    padding: 0 0.5rem;
  }

  .resource-nav li {
    padding: 1rem 0;
  }

  .resource-nav a:hover:after {
    width: 100%;
  }
  .resourceCardContainer {
    justify-content: center;
  }

  #resourceCard {
    width: 90%;
    margin: 1rem 0;
  }

  #button-row button {
    margin: 1rem 0.7rem;
    width: 9rem;
  }

  .resource-modal-content {
    width: 90%;
    margin: 40% auto;
  }

  /*music player*/
  .modal-content {
    float: none;
  }

  .music-container {
    flex-wrap: wrap;
    justify-content: center;
  }
}
